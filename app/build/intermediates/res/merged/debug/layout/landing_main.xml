<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/landing_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp">
        <Button
            android:background="@mipmap/caregiver"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/caregiver_button"
            android:layout_gravity="center_vertical" />

        <Button
            android:background="@mipmap/individual"
            android:layout_height="130dp"
            android:id="@+id/individual_button"
            android:layout_width="130dp"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <TextView
        android:text="Hello, are you the \ncaregiver or the individual?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/landing_title"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="85dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp" />
</RelativeLayout>